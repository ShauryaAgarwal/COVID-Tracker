<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity">

    <ImageView
        android:id="@+id/id_homePageHomeIconImageView"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginEnd="75dp"
        android:layout_marginRight="75dp"
        app:layout_constraintBottom_toBottomOf="@+id/id_homePageStatsIconImageView"
        app:layout_constraintEnd_toStartOf="@+id/id_homePageStatsIconImageView"
        app:layout_constraintTop_toTopOf="@+id/id_homePageStatsIconImageView"
        tools:srcCompat="@tools:sample/avatars" />

    <ImageView
        android:id="@+id/id_homePageStatsIconImageView"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginBottom="36dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <ImageView
        android:id="@+id/id_homePageProfileIconImageView"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="75dp"
        android:layout_marginLeft="75dp"
        app:layout_constraintBottom_toBottomOf="@+id/id_homePageStatsIconImageView"
        app:layout_constraintStart_toEndOf="@+id/id_homePageStatsIconImageView"
        app:layout_constraintTop_toTopOf="@+id/id_homePageStatsIconImageView"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/id_homePageHomeIconTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Home"
        app:layout_constraintEnd_toEndOf="@+id/id_homePageHomeIconImageView"
        app:layout_constraintStart_toStartOf="@+id/id_homePageHomeIconImageView"
        app:layout_constraintTop_toBottomOf="@+id/id_homePageHomeIconImageView" />

    <TextView
        android:id="@+id/id_homePageStatsIconTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Stats"
        app:layout_constraintEnd_toEndOf="@+id/id_homePageStatsIconImageView"
        app:layout_constraintStart_toStartOf="@+id/id_homePageStatsIconImageView"
        app:layout_constraintTop_toBottomOf="@+id/id_homePageStatsIconImageView" />

    <TextView
        android:id="@+id/id_homePageProfileIconTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Profile"
        app:layout_constraintEnd_toEndOf="@+id/id_homePageProfileIconImageView"
        app:layout_constraintStart_toStartOf="@+id/id_homePageProfileIconImageView"
        app:layout_constraintTop_toBottomOf="@+id/id_homePageProfileIconImageView" />

    <View
        android:id="@+id/id_navigatorTopBar"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toTopOf="@+id/id_homePageStatsIconImageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@android:color/black"/>

    <ScrollView
        android:layout_width="300dp"
        android:layout_height="350dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/textview_border"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/id_homeLinearLayoutTitleTextView">

        <LinearLayout
            android:id="@+id/id_homeLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical"></LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/id_homeLinearLayoutTitleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="Saved Data Will Appear Here"
        android:textColor="#000000"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>