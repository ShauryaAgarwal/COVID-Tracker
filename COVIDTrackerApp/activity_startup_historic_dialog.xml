<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StartupHistoricDialog">

    <TextView
        android:id="@+id/id_startupHistoricDialogTextView"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="You have selected the historic data option. Please type in a date AFTER January 21, 2020 (format: yyyy-mm-dd) to get data for that day."
        android:textColor="#020202"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/id_startupHistoricDialogEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:gravity="center_horizontal"
        android:inputType="textPersonName"
        android:text="Type Date Here"
        app:layout_constraintEnd_toEndOf="@+id/id_startupHistoricDialogTextView"
        app:layout_constraintStart_toStartOf="@+id/id_startupHistoricDialogTextView"
        app:layout_constraintTop_toBottomOf="@+id/id_startupHistoricDialogTextView" />

</androidx.constraintlayout.widget.ConstraintLayout>